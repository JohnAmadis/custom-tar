{
    // Konfiguracja zadań dla standardowej aplikacji C++ z CMake
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [],
            "detail": "Konfiguruje projekt CMake"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "CMake Configure",
            "problemMatcher": ["$gcc"],
            "detail": "Buduje projekt używając CMake"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build", "--target", "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [],
            "detail": "Czyści pliki budowania"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/custom-tar",
            "group": "test",
            "dependsOn": "Build",
            "detail": "Uruchamia zbudowaną aplikację"
        }
    ]
}